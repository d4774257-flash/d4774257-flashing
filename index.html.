    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/ethers/6.7.0/index.umd.min.js"></script>
    <style>
        .glass { background: rgba(255, 255, 255, 0.05); backdrop-filter: blur(10px); }
        .pending-row { animation: pulse 2s infinite; }
        @keyframes pulse { 0%, 100% { opacity: 1; } 50% { opacity: .5; } }
        .sim-active { border: 2px solid #3b82f6 !important; }
    </style>
</head>
<body class="bg-slate-900 text-white min-h-screen font-sans">

<div class="container mx-auto px-4 py-8 max-w-4xl">
    <div class="flex justify-between items-center mb-6">
        <div class="flex items-center space-x-3 bg-slate-800 p-1 rounded-full border border-slate-700">
            <button id="liveTab" onclick="switchMode('live')" class="px-4 py-1.5 rounded-full text-xs font-bold transition-all bg-emerald-600">LIVE TESTNET</button>
            <button id="simTab" onclick="switchMode('sim')" class="px-4 py-1.5 rounded-full text-xs font-bold transition-all text-slate-400">SIMULATION</button>
        </div>
        <div id="simBadge" class="hidden px-3 py-1 bg-blue-600/20 text-blue-400 border border-blue-500/50 rounded text-[10px] font-bold uppercase tracking-tighter">
            Mock Environment Active
        </div>
    </div>

    <header id="mainHeader" class="p-6 glass rounded-2xl border border-slate-700 flex justify-between items-center mb-8 transition-all">
        <div>
            <h1 class="text-xl font-bold">USDT Asset Manager</h1>
            <p id="walletAddress" class="text-xs text-slate-400 font-mono mt-1">Initialize Connection...</p>
        </div>
        <div class="text-right">
            <p class="text-[10px] uppercase text-slate-500 font-bold">Available Balance</p>
            <p id="usdtBalance" class="text-2xl font-mono">0.00 <span class="text-sm text-emerald-500">USDT</span></p>
        </div>
    </header>

    <div class="grid md:grid-cols-2 gap-6">
        <section class="p-6 glass rounded-2xl border border-slate-700">
            <h2 class="text-lg font-semibold mb-4">Execute Transfer</h2>
            <div class="space-y-4">
                <input id="recipient" type="text" placeholder="Recipient 0x..." class="w-full bg-slate-800 border border-slate-600 p-3 rounded-lg focus:ring-2 focus:ring-emerald-500 outline-none text-sm font-mono">
                <input id="amount" type="number" placeholder="0.00 USDT" class="w-full bg-slate-800 border border-slate-600 p-3 rounded-lg focus:ring-2 focus:ring-emerald-500 outline-none font-mono">
                <button id="sendBtn" onclick="handleAction()" class="w-full bg-emerald-600 hover:bg-emerald-500 py-3 rounded-xl font-bold transition-all">
                    Confirm Transaction
                </button>
            </div>
        </section>

        <section class="p-6 glass rounded-2xl border border-slate-700">
            <h2 class="text-lg font-semibold mb-4">Mempool & Activity</h2>
            <div id="txList" class="space-y-3">
                </div>
        </section>
    </div>
</div>

<script>
    // --- STATE ---
    let mode = 'live'; // 'live' or 'sim'
    let simBalance = 5000.00;
    const USDT_ADDR = "0x7169D38820dfd117C3FA1f22a697dBA58d90BA06";
    const ABI = ["function balanceOf(address o) view returns (uint256)", "function transfer(address t, uint256 a) returns (bool)", "function decimals() view returns (uint8)"];

    // --- MODE SWITCHING ---
    function switchMode(newMode) {
        mode = newMode;
        document.getElementById('liveTab').className = `px-4 py-1.5 rounded-full text-xs font-bold transition-all ${mode==='live' ? 'bg-emerald-600' : 'text-slate-400'}`;
        document.getElementById('simTab').className = `px-4 py-1.5 rounded-full text-xs font-bold transition-all ${mode==='sim' ? 'bg-blue-600' : 'text-slate-400'}`;
        document.getElementById('mainHeader').className = `p-6 glass rounded-2xl border flex justify-between items-center mb-8 transition-all ${mode==='sim' ? 'sim-active' : 'border-slate-700'}`;
        document.getElementById('simBadge').classList.toggle('hidden', mode === 'live');
        
        mode === 'sim' ? initSim() : initLive();
    }

    // --- SIMULATION LOGIC ---
    function initSim() {
        document.getElementById('walletAddress').innerText = "0xSIM_DEBUG_WALLET_ACTIVE";
        updateUIBalance(simBalance);
    }

    async function handleAction() {
        if (mode === 'sim') {
            const amt = parseFloat(document.getElementById('amount').value);
            if (amt > simBalance) return alert("Insufficient Simulated Funds");
            
            // 1. Instant Valid Transaction Broadcast (Hash generated)
            const fakeHash = "0x" + Math.random().toString(16).slice(2, 66);
            addTxItem(fakeHash, amt, 'Pending');
            
            // 2. Mock "Mining" Delay (8 seconds)
            setTimeout(() => {
                updateTxStatus(fakeHash, 'Confirmed');
                simBalance -= amt;
                updateUIBalance(simBalance);
            }, 8000);
        } else {
            // Call the live transfer logic from previous version
            alert("Ensure MetaMask is connected to Sepolia.");
        }
    }

    // --- UI HELPERS ---
    function updateUIBalance(val) {
        document.getElementById('usdtBalance').innerHTML = `${val.toFixed(2)} <span class="text-sm text-emerald-500">USDT</span>`;
    }

    function addTxItem(hash, amt, status) {
        const div = document.createElement('div');
        div.id = `tx-${hash}`;
        div.className = `p-3 rounded-lg bg-slate-800 border border-slate-700 flex justify-between items-center ${status === 'Pending' ? 'pending-row' : ''}`;
        div.innerHTML = `
            <div>
                <p class="text-[10px] text-slate-500 font-mono">${hash.substring(0,14)}...</p>
                <p class="text-sm font-bold">-${amt} USDT</p>
            </div>
            <span class="status-pill text-[10px] font-bold px-2 py-0.5 rounded ${status==='Pending' ? 'bg-amber-900/30 text-amber-500' : 'bg-emerald-900/30 text-emerald-500'}">
                ${status}
            </span>
        `;
        document.getElementById('txList').prepend(div);
    }

    function updateTxStatus(hash, status) {
        const el = document.getElementById(`tx-${hash}`);
        if (el) {
            el.classList.remove('pending-row');
            const pill = el.querySelector('.status-pill');
            pill.innerText = status;
            pill.className = "status-pill text-[10px] font-bold px-2 py-0.5 rounded bg-emerald-900/30 text-emerald-500";
        }
    }

    window.onload = () => switchMode('live');
</script>
</body>
</html>
